<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xx">
    <select id="findAll" resultType="Day01.CodeReview.bean.Student">
        select * from student;
    </select>

    <select id="findById">
        select * from student where sid = #{sid};
    </select>

    <insert id="insert">
        insert into student (name, age) values (#{sid}, #{name});
    </insert>

    <update id="update">
        update student set name = #{name}, age = #{age} where sid = #{sid};
    </update>

    <delete id="delete">
        delete from student where sid = #{sid};
    </delete>
</mapper>